<div class="container">
  <div class="col-xs-12">
  <% if @model == "user" %>
    <h2>User search for <%= @value %></h2>
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>Name</th>
          <th>Introduction</th>
        </tr>
      </thead>
      <% @datas.each do |user| %>
      <tbody>
        <tr>
          <th><%= link_to user_path(user.id) do %>
            <%= attachment_image_tag(user, :profile_image, size: "50x50", fallback: "no-image-icon.jpg") %>
          <% end %></th>
          <th>
            <%= user.name %>
          </th>
          <th>
            <%= user.introduction %>
          </th>
        </tr>
      </tbody>
      <% end %>
    </table>

    <% elsif @model == "book" %>
    <h2>Books search for <%= @value %></h2>
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
      <% @datas.each do |book| %>
      <tbody>
        <tr>
          <th><%= link_to user_path(book.user) do %>
           <%= attachment_image_tag(book.user, :profile_image, size: "50x50", fallback: "no-image-icon.jpg") %>
          <% end %>
          </th>
          <th><%= link_to book.title, book_path(book), class: "book_#{book.id}" %></th>
          <th><%= book.body %></th>
        </tr>
      </tbody>
      <% end %>
    </table>
    <% end %>
  </div>
</div>