    <% book.book_comments.each do |book_comment| %>
      <p>
        <%= link_to user_path(book.user) do %>
          <%= attachment_image_tag(book.user, :profile_image, size: "50x50", fallback: "no-image-icon.jpg") %><br>
          <%= book_comment.user.name %><br>
        <% end %>
      </p>
      <p>
        <%= book_comment.comment %>
        <% if book_comment.user.id == current_user.id %>
            <%= link_to "Destroy", book_book_comments_path(book, book_comment), method: :delete, class: "btn btn-sm btn-danger", remote: true %>
        <% end %>
      </p>
    <% end %>
